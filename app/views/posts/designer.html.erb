<!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12"><br>
                <h1 class="page-header">Designer
                <small>포트폴리오 의뢰 공간</small>
                </h1>
                <% if user_signed_in? %>
                <div class="row">
                <ol class="breadcrumb">
                    
                        <a href="/posts/new" style="text-decoration:none; " class="btn btn-primary">새 글 쓰기</a><br>
        </ol>
                
                <% end %>
            </div>
        </div>
        <!-- /.row -->
        
        
        <%@posts.each do |post|%>
        <div class="col-md-4">
            <a href="/posts/show/<%=post.id%>"  >
                <%post.imgs.all.each do |post_image| %>
                    <% post_image.img_url.each do |url| %>
                        <%= image_tag url, class:"img-thumbnail", style:"width:350px; height:250px;" %> <br>
                    <%end%>
                    <% break %>
                <%end%>
            </a>
            <h3>
                <center><hr><a href="/posts/show/<%=post.id%>" style="text-decoration:none;"><%=post.title%></a></center>
            </h3>
             <hr><p><strong>예산 :</strong> <%=post.money%><br>
               <strong> 기간 : </strong><%=post.date%><br>
               <strong> 진행상황 : </strong> <%=post.situation%><br></p><hr>
        </div>
        <%end%>
        
        
        

       

        <!-- Pagination -->
        <div class="row text-center">
