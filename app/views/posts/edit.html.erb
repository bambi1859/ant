
<br><br><center><h1><strong>개미</strong></h1>
					
					
 <center><h3>게시글 수정</h3></center><br><hr><br>

<%=form_for @edit_post, url:post_update_path , multipart: true do |f| %>
    <div class="form-group" style="width:30%;">
     <strong>제목</strong> <%= f.text_field :title  , class: "form-control" %></div>
    <div class="form-group" style="width:30%;">
         <strong>목적</strong> <%= f.text_field :purpose , class: "form-control" %></div>
     <div class="radio" style="width:50%;">
         <strong>예산:</strong> <label><%= f.radio_button :money, "10만원이하" %>10만원이하</label>
        <label><%= f.radio_button :money, "15만원이하" %>15만원이하</label>
        <label><%= f.radio_button :money, "20만원이하" %>20만원이하</label>
        <label><%= f.radio_button :money, "25만원이하" %>25만원이하</label>
        <label><%= f.radio_button :money, "30만원이하" %>30만원이하</label>
    </div>
    <div class="form-group" style="width:30%;">
        <strong>기한</strong> <%= f.number_field :date , class: "form-control" %>
    </div>
   
    <div class="form-group" style="width:30%;">
        <strong>내용</strong> <%= f.text_field :content , class: "form-control" %>
    </div>
    <div class="form-group" style="width:30%;">
        <strong>컨셉사진</strong> <%= f.file_field :image, multiple: true, accept: 'image/*', class: "btn btn-default" %>
    </div>
     <div class="button" style="margin-top: 30px; margin-bottom: 50px;">
         <%= submit_tag '제출' , class: "btn btn-default" %>
    </div>
<%end%>
